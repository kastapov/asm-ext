{
  "name": "ASM EXT",
  "version": "1.0",
  "description": "Chrome extension for App Synthetic Monitor",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js",
      "vendor.js",
      "runtime.js"
    ]
  },
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "*://api.asmdev.cz/*",
    "*://asmdev.cz/*",
    "*://api.asm.ca.com/*",
    "*://asm.ca.com/*"
  ]
}
